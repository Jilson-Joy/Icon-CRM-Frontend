{
  "type": "module",
  "name": "icones-crm",
  "version": "1.0.0",
  "descrption": "Icones CRM",
  "homepage": "https://github.com/MinuteDesigns/IconesCRM.git",
  "bugs": "https://github.com/MinuteDesigns/IconesCRM.git/issues",
  "license": "UNLICENSED",
  "author": "it@minutedesigns.in",
  "repository": {
    "type": "git",
    "url": "https://github.com/MinuteDesigns/IconesCRM.git"
  },
  "scripts": {
    "build": "yarn typecheck && vite build",
    "dev": "vite --host",
    "format": "prettier --check --ignore-path .gitignore --write .",
    "lint": "eslint --ignore-path .gitignore .",
    "preview": "vite preview --host",
    "typecheck": "tsc",
    "lint:fix": "eslint --fix"
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 8",
    "yarn": ">= 1"
  },
  "dependencies": {
    "@canvasjs/charts": "^3.8.1",
    "@canvasjs/react-charts": "^1.0.2",
    "@reduxjs/toolkit": "^2.2.5",
    "@tailwindcss/forms": "^0.5.7",
    "apexcharts": "^3.36.3",
    "axios": "^1.6.8",
    "chart.js": "^4.4.3",
    "classnames": "^2.3.2",
    "flowbite": "^1.5.5",
    "flowbite-react": "^0.3.7",
    "json-server": "^1.0.0-alpha.23",
    "lucide-react": "^0.363.0",
    "react-apexcharts": "^1.4.0",
    "react-csv": "^2.2.2",
    "react-date-range": "^2.0.1",
    "react-export-table-to-excel": "^1.0.6",
    "react-hook-form": "^7.51.0",
    "react-icons": "^4.12.0",
    "react-redux": "^9.1.2",
    "react-toastify": "^10.0.5",
    "remixicon-react": "^1.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@hookform/devtools": "^4.3.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/sortablejs": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^2.2.0",
    "autoprefixer": "^10.4.13",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.7.1",
    "postcss": "^8.4.19",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.4.5",
    "react-router-dom": "^6.22.3",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^3.2.5",
    "vitest": "^0.25.6"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/strict",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:tailwindcss/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error",
      "react/react-in-jsx-scope": "off",
      "react/no-unescaped-entities": "off",
      "tailwindcss/classnames-order": [
        "error",
        {
          "callees": [
            "classnames"
          ],
          "config": "tailwind.config.cjs"
        }
      ],
      "tailwindcss/no-custom-classname": [
        "error",
        {
          "config": "tailwind.config.cjs"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
